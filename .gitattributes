# Auto detect text files and normalize line endings (prefer CRLF on Windows)
* text=auto
# Unity YAML files
*.unity filter=lfs diff=lfs merge=lfs -text
*.prefab filter=lfs diff=lfs merge=lfs -text
*.asset filter=lfs diff=lfs merge=lfs -text
*.scene merge=unityyamlmerge eol=crlf
*.meta merge=unityyamlmerge eol=crlf
# C# files
*.cs diff=csharp eol=crlf
# Binary files
*.bin binary
*.dll binary
*.so binary
*.exe binary
*.o binary
*.obj binary
# Image files
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg binary
*.gif binary
*.psd binary
*.tga binary
*.tif binary
*.tiff binary
*.bmp binary
# Audio files
*.mp3 binary
*.wav binary
*.ogg binary
*.aif binary
*.aiff binary
# Video files
*.mp4 binary
*.mov binary
*.avi binary
# 3D model files
*.fbx binary
*.blend binary
*.max binary
*.gltf binary
*.glb binary
# Package files
*.unitypackage filter=lfs diff=lfs merge=lfs -text
*.apk binary
*.aab binary
